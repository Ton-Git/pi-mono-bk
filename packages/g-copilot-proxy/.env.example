# Server Configuration
APP_NAME=g-copilot-proxy
APP_VERSION=0.1.0
HOST=0.0.0.0
PORT=8000
DEBUG=false

# pi-ai Bridge
PIAI_MODULE_PATH=../ai
PIAI_NODE_PATH=node

# GitHub Copilot
COPILOT_BASE_URL=https://api.individual.githubcopilot.com
COPILOT_ENTERPRISE_URL=

# Authentication
# passthrough: Client sends GitHub Copilot token in Authorization header
# managed: Server handles OAuth flow and stores credentials
AUTH_MODE=passthrough
API_KEY_HEADER=Authorization
API_KEY_PREFIX=Bearer

# CORS
CORS_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Logging
LOG_LEVEL=INFO
